<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context="eu.tinoba.androidarcitecturetemplate.ui.home.HomeActivity">

    <ImageView
        android:id="@+id/king_ict_image"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginTop="60dp"
        android:src="@drawable/king_ict" />

    <Button
        android:id="@+id/home_btn_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/king_ict_image"
        android:layout_marginTop="40dp"
        android:background="@color/redDefault"
        android:text="Login"
        android:textColor="@android:color/white" />

    <Button
        android:layout_marginTop="16dp"
        android:id="@+id/home_btn_register"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/home_btn_login"
        android:background="@color/redDefault"
        android:text="Register"
        android:textColor="@android:color/white" />

</RelativeLayout>
